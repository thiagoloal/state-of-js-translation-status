{
	"name": "sample-project",
	"version": "0.0.1",
	"description": "Show usage for the OvernightJs library",
	"main": "none",
	"dependencies": {
		"@overnightjs/core": "^1.7.6",
		"cross-fetch": "^3.1.5",
		"express": "^4.17.3",
		"express-async-handler": "^1.1.4",
		"express-promise-router": "^3.0.3",
		"express-validator": "^6.1.0",
		"graphql": "^16.3.0",
		"graphql-request": "^4.0.0",
		"http-status-codes": "^1.3.2",
		"typescript": "^4.1.0"

	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@types/express": "^4.17.13",
		"@types/express-jwt": "0.0.40",
		"@types/jest": "^27.4.1",
		"@types/node": "^12.0.2",
		"husky": "^7.0.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"nock": "^13.2.4",
		"ts-jest": "^27.1.3",
		"ts-node": "^8.5.4",
		"tsconfig-paths": "^3.8.0",
		"tslint": "^5.16.0",
		"tslint-lines-between-class-members": "^1.3.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-push": "npm test"
		}
	},
	"scripts": {
    "start": "npm run build && NODE_ENV=production node ./dist/main/index.js",
    "tsc": "./node_modules/typescript/bin/tsc",
		"dev": "ts-node -r tsconfig-paths/register ./src/main/index.ts",
		"build": "tsc --project tsconfig.json",
		"test": "jest --config jest.config.js",
		"test:unit": "npm run test -- --coverage",
		"test:watch": "npm run test -- --watch",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/seanpmaxwell/overnight/sample-project"
	},
	"author": "Sean Maxwell",
	"license": "MIT"
}
